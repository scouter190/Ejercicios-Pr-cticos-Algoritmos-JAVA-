package clases;

public class Persona {
	public String nombre;
	public String apellido;
	public int edad;
	public double estatura;
	public double pesa;
	
	public Persona(String nombre, String apellido, int edad, double estatura, double pesa) {
		super();
		this.nombre = nombre;
		this.apellido = apellido;
		this.edad = edad;
		this.estatura = estatura;
		this.pesa = pesa;
	}
	
	public String calcularEdad(){
		String isEdad="0";
		if (edad <18) {
			return "Menor Edad";
		}else if(edad >=18) {
			return "Mayor edad";
		}
		return isEdad;
	}
	
	
}
